{
    "compilerOptions": {
        "outDir": "./public/",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "forceConsistentCasingInFileNames": false
    },
    "include": [
        "./src/**/*"
    ]
}